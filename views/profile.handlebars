<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand"  href="/">College Scorecard Visualization App</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
      <li class="nav-item">
      <a class="nav-link" href="/logout">Logout</a>
      </li>
      <li class="nav-item">
      <a class="nav-link" href="/profile">Profile</a>
      </li>
      </ul>
</nav>

<div class="mt-0 container">
    <div class="jumbotron text-center">
        <h2 class="display-4">{{user.name}}'s Profile</h2>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="card">
            <h4 class="card-header header">
                {{user.name}}'s Previous Searches:
            </h4>
            <div class="card-body">

                {{#each searches}}
                <li class="list-group-item">
                    <div class="row text-justify">
                        <div class="col-sm-8">
                            <h5 class="card-title">{{name}} </h5>
                        </div>
                        <div class="col-sm-2">
                            <a href="{{site}}" class="btn btn-primary">View Results</a>
                        </div>
                        <div class="col-sm-2">
                            <a href="/api/delete/{{id}}" id="delete-button" class="btn btn-warning">Delete</a>
                        </div>
                    </div>
                </li>
                {{/each}}
                </ul>

            </div>

        </div>
    </div>
</div>